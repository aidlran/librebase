{
  "name": "trusync-svelte",
  "description": "Cybernetically enhanced truSync apps.",
  "version": "1.0.0-preview.1",
  "license": "Apache-2.0",
  "private": true,
  "repository": "github:aidlran/trusync",
  "homepage": "https://github.com/aidlran/trusync/tree/main/packages/lib-svelte#readme",
  "scripts": {
    "build": "svelte-kit sync && vite build && npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "preview": "vite preview",
    "start": "svelte-kit sync && concurrently -k npm:dev npm:watch",
    "test": "npm run test:integration && npm run test:unit",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch --preserveWatchOutput"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^1.0.0",
    "svelte": "^4.0.0",
    "trusync": "*"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.0.0",
    "@sveltejs/package": "^2.2.1",
    "concurrently": "^8.2.0",
    "publint": "^0.2.0",
    "svelte": "^4.0.0",
    "svelte-check": "^3.5.0",
    "trusync": "file:../lib-js",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
