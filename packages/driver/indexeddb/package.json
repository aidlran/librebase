{
  "name": "@librebase/driver-indexeddb",
  "version": "0.1.0",
  "description": "IndexedDB channel driver for @librebase/core.",
  "homepage": "https://librebase.io",
  "bugs": "https://github.com/aidlran/librebase/issues",
  "repository": "github:aidlran/librebase",
  "license": "Apache-2.0",
  "author": "Aidan Loughran",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/indexeddb.d.ts",
      "default": "./dist/indexeddb.js"
    }
  },
  "main": "./dist/indexeddb.js",
  "types": "./dist/indexeddb.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "rm -dr dist; tsc --project tsconfig.build.json",
    "cost": "bun build --minify indexeddb.ts | gzip | wc -c",
    "lc": "echo @librebase/driver-indexeddb: $(find dist -type f -name \"*.js\" -exec cat {} \\; | wc -l) lines",
    "start": "npm run watch",
    "watch": "tsc --watch --preserveWatchOutput --project tsconfig.build.json"
  },
  "peerDependencies": {
    "@librebase/core": "*"
  }
}
