{
  "name": "@librebase/fs",
  "version": "0.1.0",
  "description": "A content addressable file system protocol with an extensible codec system.",
  "homepage": "https://librebase.io",
  "bugs": "https://github.com/aidlran/librebase/issues",
  "repository": "github:aidlran/librebase",
  "license": "Apache-2.0",
  "author": "Aidan Loughran",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./recommended": {
      "types": "./dist/recommended.d.ts",
      "default": "./dist/recommended.js"
    }
  },
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "rm -dr dist; tsc --project tsconfig.build.json",
    "cost": "bun build --minify src/index.ts | gzip | wc -c",
    "lc": "echo @librebase/fs: $(find dist -type f -name \"*.js\" -exec cat {} \\; | wc -l) lines",
    "start": "npm run watch",
    "watch": "tsc --watch --preserveWatchOutput --project tsconfig.build.json"
  },
  "dependencies": {
    "content-type": "1.0.5"
  },
  "devDependencies": {
    "@types/content-type": "^1.1.8"
  },
  "peerDependencies": {
    "@librebase/core": "~0.1.0"
  }
}
