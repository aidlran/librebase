{
  "name": "@librebase/core",
  "version": "0.1.0",
  "description": "The Librebase core engine and primitives.",
  "homepage": "https://librebase.io",
  "bugs": "https://github.com/aidlran/librebase/issues",
  "repository": "github:aidlran/librebase",
  "license": "Apache-2.0",
  "author": "Aidan Loughran",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/public/index.d.ts",
      "default": "./dist/public/index.js"
    },
    "./internal": {
      "types": "./dist/internal/index.d.ts",
      "default": "./dist/internal/index.js"
    }
  },
  "main": "./dist/public/index.js",
  "types": "./dist/public/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "rm -dr dist; tsc --project tsconfig.build.json",
    "cost": "bun build --minify src/public/index.ts | gzip | wc -c",
    "lc": "echo @librebase/core: $(find dist -type f -name \"*.js\" -exec cat {} \\; | wc -l) lines",
    "start": "tsc --watch --preserveWatchOutput --project tsconfig.build.json"
  },
  "dependencies": {
    "base-x": "4.0.0",
    "varint": "6.0.0"
  }
}
