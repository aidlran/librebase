{
  "name": "trusync-monorepo",
  "description": "Monorepo for all things truSync.",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/trusync",
  "bugs": "https://github.com/aidlran/trusync/issues",
  "homepage": "https://github.com/aidlran/trusync#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:js": "npm run build -w packages/lib-js",
    "build:svelte": "npm run build -w packages/lib-svelte",
    "format": "prettier --write --plugin prettier-plugin-jsdoc --plugin prettier-plugin-svelte .",
    "lc": "npm run lc --workspaces",
    "lint": "eslint .",
    "lint:js": "eslint packages/lib-js",
    "lint:svelte": "eslint packages/lib-svelte",
    "start": "conc -kn js,svelte \"npm start -w packages/lib-js\" \"npm start -w packages/lib-svelte\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-svelte": "^2.34.0",
    "prettier": "^3.0.3",
    "prettier-plugin-jsdoc": "^1.1.1",
    "prettier-plugin-svelte": "^3.0.3"
  }
}
