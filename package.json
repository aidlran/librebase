{
  "name": "librebase-monorepo",
  "private": true,
  "author": "Aidan Loughran",
  "repository": "github:aidlran/librebase",
  "bugs": "https://github.com/aidlran/librebase/issues",
  "homepage": "https://github.com/aidlran/librebase#readme",
  "workspaces": [
    "lib/*",
    "packages/*",
    "packages/codec/*",
    "packages/driver/*"
  ],
  "scripts": {
    "build": "conc \"npm run build -w lib/signals\" npm:build:2 && npm run build:4",
    "build:2": "npm run build -w packages/core && conc \"npm run build -w packages/driver/indexeddb\" \"npm run build -w packages/rpc\" npm:build:3",
    "build:3": "npm run build -w packages/fs && npm run build -w packages/codec/json && npm run build -w packages/wraps",
    "build:4": "npm run build -w packages/keyrings && npm run build -w packages/svelte",
    "build:docs": "conc npm:build:docs:*",
    "build:docs:plantuml": "plantuml docs/*.puml",
    "build:docs:typedoc": "typedoc",
    "ci": "npm run build && npm run build:docs && npm run lint && npm run test",
    "cost": "npm run cost --workspaces --if-present",
    "coverage": "vitest run --coverage",
    "format": "prettier --write . && npx --workspaces sort-package-json",
    "lc": "npm run lc --workspaces --if-present",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint packages",
    "lint:publint": "npx --workspaces publint",
    "lint:sort-package-json": "npx --workspaces sort-package-json --check",
    "lint:typedoc": "typedoc --treatWarningsAsErrors --emit none",
    "start": "conc -k npm:start:*",
    "start:codec/json": "npm start -w packages/codec/json",
    "start:core": "npm start -w packages/core",
    "start:driver/indexeddb": "npm start -w packages/driver/indexeddb",
    "start:fs": "npm start -w packages/fs",
    "start:keyrings": "npm start -w packages/keyrings",
    "start:rpc": "npm start -w packages/rpc",
    "start:svelte": "npm start -w packages/svelte",
    "start:wraps": "npm start -w packages/wraps",
    "test": "vitest run",
    "test:dev": "vitest --coverage"
  },
  "devDependencies": {
    "@adamantjs/signals": "file:lib/signals",
    "@librebase/codec-json": "file:packages/codec/json",
    "@librebase/core": "file:packages/core",
    "@librebase/driver-indexeddb": "file:packages/driver/indexeddb",
    "@librebase/fs": "file:packages/fs",
    "@librebase/keyrings": "file:packages/keyrings",
    "@librebase/rpc": "file:packages/rpc",
    "@librebase/wraps": "file:packages/wraps",
    "@noble/secp256k1": "^1.7.1",
    "@types/mime-db": "^1.43.5",
    "@types/node": "^20.14.7",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/web-worker": "^1.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "fake-indexeddb": "^6.0.0",
    "happy-dom": "^14.12.3",
    "mime-db": "^1.52.0",
    "prettier": "^3.3.2",
    "prettier-plugin-jsdoc": "^1.3.0",
    "publint": "^0.2.8",
    "sort-package-json": "^2.10.0",
    "svelte": "^4.2.18",
    "typedoc": "~0.26.0",
    "typescript": "~5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  }
}
