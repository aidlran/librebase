{
  "name": "astrobase",
  "version": "0.1.0",
  "private": true,
  "description": "An extensible suite of protocols for building decentralized, multi-user apps.",
  "keywords": [],
  "homepage": "https://astrobase.ai",
  "bugs": {
    "url": "https://github.com/AstrobaseTech/Astrobase/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AstrobaseTech/Astrobase.git"
  },
  "license": "Apache-2.0",
  "author": "Aidan Loughran",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "conc -n client,engine \"npm run build -w packages/client\" \"npm run build -w packages/engine\"",
    "postbuild": "npx --workspaces publint",
    "build:diagrams": "plantuml docs/*.puml",
    "build:docs": "typedoc",
    "ci": "conc npm:build npm:lint npm:test",
    "cost": "npm run cost --workspaces --if-present",
    "coverage": "vitest run --coverage",
    "format": "conc npm:format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json package.json packages/*/package.json",
    "lc": "npm run lc --workspaces --if-present",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check package.json packages/*/package.json",
    "lint:typedoc": "typedoc --emit none",
    "start": "npm run watch",
    "test": "vitest run",
    "watch": "conc -k npm:watch:*",
    "watch:client": "npm watch -w packages/client",
    "watch:engine": "npm watch -w packages/engine"
  },
  "devDependencies": {
    "@astrobase/client": "file:packages/client",
    "@astrobase/engine": "file:packages/engine",
    "@types/mime-db": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/web-worker": "^1.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fake-indexeddb": "^6.0.0",
    "mime-db": "^1.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-jsdoc": "~1.3.0",
    "publint": "~0.2.0",
    "rimraf": "^5.0.0",
    "sort-package-json": "~2.10.0",
    "typedoc": "~0.26.0",
    "typescript": "~5.5.0",
    "vitest": "^1.0.0"
  }
}
