{
  "name": "astrobase",
  "version": "0.1.0",
  "private": true,
  "description": "An extensible suite of protocols for building decentralized, secure, multi-user apps.",
  "keywords": [
    "astrobase",
    "e2ee",
    "encryption",
    "web3"
  ],
  "homepage": "https://astrobase.me",
  "bugs": {
    "url": "https://github.com/AstrobaseTech/Astrobase/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AstrobaseTech/Astrobase.git"
  },
  "license": "Apache-2.0",
  "author": "Aidan Loughran",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "npx --workspaces rimraf dist",
    "build": "npm run build:lib:core && npm run build:lib:keyrings",
    "postbuild": "npx --workspaces publint",
    "build:diagrams": "plantuml docs/*.puml",
    "build:docs": "typedoc",
    "build:lib:core": "npx -w packages/core tsc --project tsconfig.build.json",
    "build:lib:keyrings": "npx -w packages/keyrings tsc --project tsconfig.build.json",
    "ci": "npm run build && conc npm:lint npm:test",
    "cost": "bun build --minify index.js | gzip | wc -c",
    "coverage": "vitest run --coverage",
    "format": "conc npm:format:*",
    "format:prettier": "prettier --write .",
    "format:sort-package-json": "sort-package-json package.json packages/*/package.json",
    "lc": "find packages/*/dist -type f -name \"*.js\" -exec cat {} \\; | wc -l",
    "lint": "conc npm:lint:*",
    "lint:eslint": "eslint .",
    "lint:sort-package-json": "sort-package-json --check package.json packages/*/package.json",
    "lint:typedoc": "typedoc --emit none",
    "start": "npm run watch",
    "test": "vitest run",
    "watch": "tsc --watch --preserveWatchOutput --project tsconfig.watch.json"
  },
  "devDependencies": {
    "@astrobase/core": "file:packages/core",
    "@astrobase/keyrings": "file:packages/keyrings",
    "@types/mime-db": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/web-worker": "^1.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "fake-indexeddb": "^6.0.0",
    "mime-db": "^1.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-jsdoc": "~1.3.0",
    "publint": "~0.2.0",
    "rimraf": "^5.0.0",
    "sort-package-json": "~2.10.0",
    "typedoc": "~0.26.0",
    "typescript": "~5.5.0",
    "vitest": "^1.0.0"
  }
}
